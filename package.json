{
  "name": "rivy-storefront",
  "version": "1.0.0",
  "description": "Full-stack e-commerce storefront for solar equipment",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev", 
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "server:start": "cd server && npm start",
    "client:start": "cd client && npm start",
    "test": "npm run server:test && npm run client:test",
    "server:test": "cd server && npm test",
    "client:test": "cd client && npm test",
    "setup": "npm install && cd server && npm install && cd ../client && npm install",
    "seed": "cd server && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "keywords": ["ecommerce", "react", "nodejs", "express", "sequelize", "typescript", "solar"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
